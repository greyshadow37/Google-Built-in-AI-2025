{
  "manifest_version": 3,
  "name": "FV Duplicate Checker",
  "version": "1.0",
  "description": "Detects duplicate images in tabs using Fisher Vector.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icons/icon16.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/models/gmm_params.json", "js/worker.js", "js/lib/tf.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}